{
  "name": "Elixir & Phoenix DevContainer",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "forwardPorts": [4000],
  "postCreateCommand": "mix deps.get && mix ecto.setup",
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "features": {
    "ghcr.io/devcontainers/features/azure-cli:1": false
  },
  "remoteUser": "vscode"
}
